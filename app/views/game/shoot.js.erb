//set the player's message and result
$('#<%= @pLoc %>').attr('class', 'grid<%= @game.cpu_board[@pLoc] %>');
$('#player_message').html('<%= @pMes %>');

//set the cpu's message and result if there was one
<% if @cLoc %>
  $('#p<%= @cLoc %>').attr('class', 'grid<%= @game.player_board[@cLoc] %>');
  $('#cpu_message').html('<%= @cMes %>');
<% end %>

//if the game ends, disable clicking
<% if @pMes =~ /over/ or @cMes =~ /over/ %>
  $('.shoot').unbind('click');
<% end %>
